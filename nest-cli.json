{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true,
          "controllerFileNameSuffix": ".controller.ts",
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts"]
        }
      }
    ],
    "assets": ["i18n/**/*"]
  }
}
